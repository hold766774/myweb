<!-- 控制器配置C  -->
<!-- 在bean中配置有属性（包括bean格式的属性）时，bean对应的java文件内必须要定义一个与property的name名字一样的属性值，并且需要有这个属性值的getter和setter方法。 -->
<bean id="IndexAction" class="com.myweb.IndexAction">
<property name="view">
	<value>index</value>
</property> 

</bean>
</beans>
